---
import type { BuildContext, ItalicsCommentModel, PageModel } from "docs-model";
import Comments from "../Comments.astro";
interface Props {
    comment: ItalicsCommentModel;
    context: BuildContext<PageModel>;
    flatten?: boolean;
}
const { comment, context } = Astro.props;
---

<span class="italic"><Comments context={context} comments={comment.content} flatten={true} /></span>
